<!-- Sidebar -->
<aside class="w-64 h-screen bg-gray-900 text-white flex flex-col py-4">
  <h1 class="text-2xl font-bold text-center mb-6"><%= current_user.email.split('@').first %></h1>
  <nav class="flex-1">
    <ul class="space-y-4 px-6">
      <li class="flex items-center gap-2">
        <i class="fa-solid fa-computer"></i>
        <%= link_to "Servidores", servers_path %>
      </li>
      <li>
        <i class="fa-solid fa-plus"></i>
        <%= link_to "Agregar Servidor", new_server_path %>
      </li>
    </ul>
  </nav>
  <div class="mt-auto px-6 pt-6">
    <ul>
      <li class="flex items-center gap-2">
        <i class="fa-solid fa-right-from-bracket"></i>
        <%=
          link_to "Cerrar Sesión",
            destroy_user_session_path,
            data: {
              "turbo-confirm": "¿Estás seguro que quieres salir?",
              "turbo-method": :delete
            } if user_signed_in?
        %>
      </li>
    </ul>
  </div>
</aside>