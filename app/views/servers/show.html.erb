<div class="bg-white p-6 shadow rounded-lg">
  <h3 class="text-xl font-semibold mb-2">Users Behavior</h3>
  <p class="text-sm text-gray-500 mb-4">24 Hours performance</p>
  <canvas id="userChart" class="w-full h-64"></canvas>
  <div class="mt-4 flex space-x-4 text-sm">
    <span class="flex items-center"><span class="w-3 h-3 bg-red-500 inline-block mr-1"></span>Open</span>
    <span class="flex items-center"><span class="w-3 h-3 bg-orange-400 inline-block mr-1"></span>Click</span>
    <span class="flex items-center"><span class="w-3 h-3 bg-gray-600 inline-block mr-1"></span>Click Second Time</span>
  </div>
</div>

<script>
  const ctx = document.getElementById('userChart').getContext('2d');
  new Chart(ctx, {
    type: 'line',
    data: {
      labels: ['9AM', '12PM', '3PM', '6PM', '9PM', '12AM', '3AM', '6AM'],
      datasets: [
        {
          label: 'Open',
          data: [50, 100, 200, 300, 400, 500, 600, 700],
          borderColor: 'rgba(239, 68, 68, 1)',
          backgroundColor: 'rgba(239, 68, 68, 0.2)',
          fill: true,
        },
        {
          label: 'Click',
          data: [30, 60, 100, 200, 300, 350, 400, 450],
          borderColor: 'rgba(251, 191, 36, 1)',
          backgroundColor: 'rgba(251, 191, 36, 0.2)',
          fill: true,
        },
        {
          label: 'Click Second Time',
          data: [20, 40, 60, 80, 100, 150, 200, 250],
          borderColor: 'rgba(75, 85, 99, 1)',
          backgroundColor: 'rgba(75, 85, 99, 0.2)',
          fill: true,
        }
      ]
    },
    options: {
      responsive: true,
      plugins: {
        legend: {
          display: false
        }
      },
      scales: {
        y: {
          beginAtZero: true
