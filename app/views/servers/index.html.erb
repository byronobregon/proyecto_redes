<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @servers.each do |server| %>
    <div class="bg-white p-4 border rounded-lg shadow flex flex-col gap-4">
      <div class="flex justify-between items-center">
        <h4 class="text-lg font-bold">
          <%= link_to server.name, server %>
        </h4>
        <span class="text-sm px-2 py-1 rounded-full <%= server.status_style %>">
          <%= server.server_status %>
        </span>
      </div>
      <div>
        <label class="text-sm text-gray-600">CPU</label>
        <div class="w-full bg-gray-200 rounded-full h-4">
          <div class="bg-green-500 h-4 rounded-full text-xs text-white text-center" style="width: <%= server.server_logs.latest_log.cpu_usage %>%">
            <%= server.server_logs.latest_log.cpu_usage %>%
          </div>
        </div>
      </div>
      <div>
        <label class="text-sm text-gray-600">RAM</label>
        <div class="w-full bg-gray-200 rounded-full h-4">
          <div class="bg-yellow-500 h-4 rounded-full text-xs text-white text-center" style="width: <%= server.server_logs.latest_log.memory_usage %>%">
            <%= server.server_logs.latest_log.memory_usage %>%
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>